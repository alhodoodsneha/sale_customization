<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_price_list_upload_wizard" model="ir.ui.view">
        <field name="name">product.price.list.upload.form</field>
        <field name="model">product.price.list.upload</field>
        <field name="arch" type="xml">
            <form string="Upload Price List">
                <group>
                    <group>
                        <field name="file" filename="filename"/>
                        <field name="filename" invisible="1"/>
                    </group>
                    <group>
                        <button name="action_export_template" string="Export Template" type="object"
                                class="btn-secondary"/>
                    </group>
                </group>
                <footer>
                    <button type="object" name="action_process_file" string="Upload" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_price_list_upload_wizard" model="ir.actions.act_window">
        <field name="name">Upload Price List</field>
        <field name="res_model">product.price.list.upload</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_price_list_upload_wizard"/>
    </record>

    <menuitem id="menu_price_list_upload"
              name="Upload Price List"
              parent="sale.product_menu_catalog"
              action="action_price_list_upload_wizard"
              sequence="25"/>

</odoo>